<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skapps.knowMore" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.skapps.knowMore.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.skapps.knowMore.RssService" />

        <activity
            android:name="com.skapps.knowMore.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.skapps.knowMore.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skapps.knowMore.MainActivity" />
        </activity>

        <provider
            android:name=".UserProfileProvider"
            android:authorities="@string/preferences_authority"
            android:exported="false"
            />

    </application>

</manifest>
